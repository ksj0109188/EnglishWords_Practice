<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="mapper.member">
    <resultMap id="memberResult" type="MemberVO">
        <result property="userId" column="id"/>
        <result property="userPwd" column="pwd"/>
        <result property="email" column="email"/>
        <result property="address" column="address"/>
        <result property="joindate" column="joindate"/>
    </resultMap>

    <insert id="addMember" parameterType="MemberVO">
		<![CDATA[
        insert into member(id, pwd, email, address)
        values (#{userId}, #{userPwd}, #{email}, #{address})
        ]]>
	</insert>

    <select id="login" resultType="String" parameterType="java.util.Map">
        <![CDATA[
        select id
        from member
        where id = #{userId} and pwd = #{userPwd}
        ]]>
    </select>
</mapper>